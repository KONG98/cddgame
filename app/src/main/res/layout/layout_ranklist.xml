<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSeqNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text=""
        android:gravity="center"
        android:textColor="#ffffffff"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSeqNumber"
        app:layout_constraintStart_toEndOf="@+id/textViewSeqNumber"
        app:layout_constraintTop_toTopOf="@+id/textViewSeqNumber"
        app:layout_constraintEnd_toStartOf="@+id/textViewUserScore"/>

    <TextView
        android:id="@+id/textViewUserScore"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text=""
        android:gravity="center"
        android:textColor="#ffffffff"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewUserName"
        android:layout_marginEnd="20dp" />

</android.support.constraint.ConstraintLayout>